# Pool Configuration
# Defaults are optimized for 2 vCPU / 2GB RAM production server

POOL_MIN_ENGINES=1          # Minimum engines to keep ready
POOL_MAX_ENGINES=2          # Maximum concurrent engines
POOL_SCALE_UP_THRESHOLD=1   # Queue size to trigger scale up
POOL_SCALE_DOWN_IDLE_TIME=60000  # Ms of idle time before scale down

# Engine Configuration
ENGINE_THREADS=1            # Threads per engine
ENGINE_HASH=32              # Hash table size in MB per engine

